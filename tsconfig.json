{
  "compilerOptions": {
    "target": "ES2023",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "strict": true,
    "noImplicitAny": true,
    "declaration": false,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "outDir": "build",
    "paths": {
      "#utils/*": ["./src/utils/*"],
      "#types/*": ["./src/types/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
