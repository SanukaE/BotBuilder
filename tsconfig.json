{
  "compilerOptions": {
    "target": "ES2023",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "strict": true,
    "noImplicitAny": true,
    "declaration": false,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "rootDir": "./src",
    "outDir": "build",
    "paths": {
      "#utils/*": ["./utils/*"],
      "#types/*": ["./types/*"],
      "#libs/*": ["./libs/*"]
    }
  }
}
